<html>
   <head>
      <title><%= post.title %> > theStack!</title>
      <%= erb :includes %> 
   </head>
   <body>
      <div id="cont">
         <%= erb(:header, :locals => {:search => "" }) %> 

         <div id="main">
            <form class="post-form" method="post">
               <input type="text" name="title" value="<%= post.title %>" id="title-input" />
               <textarea name="text" id="text-input"><%= post.text %></textarea>
               <input id="submit" type="submit" value="edit" />
            </form>
            <div class="clearfix"></div>
         </div>

         <%= erb :footer %> 
      </div>
   </body>
</html>
